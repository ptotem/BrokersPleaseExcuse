      <%= @flat.balconies.sum{|b| b.value} %>
      <br>
      <div class="slabel">Parking</div>
      <%= @flat.parkings.sum{|b| b.value} %>
      <br>
      <br>
      <div class="slabel">Landlord</div>
      <br>
      Arijit Lahiri
      <br>
      <div class="slabel">Broker</div>
      <br>
      Kenneth Serrao
      <br>
    </div>
    <div class="span6">
      <h2>The Building</h2>
    </div>
    <div class="span4">
    </div>
  </div>
</div>