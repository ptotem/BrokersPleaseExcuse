<script type="text/javascript">
    $(function () {
        $('div.amenu a').popover({
            placement:'bottom',
            html:true
        });
    })
</script>

<!-- Header Panel -->

<div class="content" style="margin-top: 40px;padding-top: 10px;padding-bottom: 0">
  <div class="row-fluid">
    <div class="span4" style="padding-top: 5px;padding-bottom: 5px;">
      Property Id: <strong><%= @flat.flat_key %></strong> |
      <small><%= link_to "Edit", edit_property_basic_path(@flat.building, @flat) %></small>
      <br>
      <%= @flat.building.main_locality.name %>, <%= @flat.building.main_locality.area.name %>
      , <%= @flat.building.main_locality.area.city.name %>
      <h2 style="position:relative;">
        <%= @flat.bhk_config.name %> in <%= @flat.building.name %>
        <br>
        <small>
          <div style="margin-top: -10px;">
            <%= @flat.furnstat.name %> |
            Rs <%= @flat.expected_rents.first.name %> |
            <%= @flat.available_froms.first.name.strftime('%b %Y') %>
          </div>
        </small>
      </h2>
    </div>
    <div class="span3 amenu" style="margin-top: 10px;">
      <%= link_to image_tag("icons/building.png", :size => "90x90"), flats_path, :title => "Building", :'data-content' => "<table><tr><td><img src='/assets/icons/building.png' style='width:128px;vertical-align:middle;'/></td><td>Click here to go to the Building Page.</td></tr></table>" %>
      <%= link_to image_tag("icons/notes.png", :size => "90x90"), flats_path, :title => "Notes", :'data-content' => "<table><tr><td><img src='/assets/icons/notes.png' style='width:128px;vertical-align:middle;'/></td><td>Click here to see the Notes on the Property.</td></tr></table>" %>
      <%= link_to image_tag("icons/interactioning.png", :size => "90x90"), flats_path, :title => "Interactions", :'data-content' => "<table><tr><td><img src='/assets/icons/interactioning.png' style='width:128px;vertical-align:middle;'/></td><td>Click here to view the Interactions and Tasks associated with this property.</td></tr></table>" %>
    </div>
    <div class="span5 pull-right" style="padding-top: 5px;padding-bottom: 5px;">
      <div class="span2 pull-right">
        <div class="row-fluid">
          <div>
            <div class="row-fluid"><h4>Approach Quality</h4></div>
            <div class="row-fluid">
              <div class="span6">
                <%= @approach_quality.name %>
              </div>
              <div class="span6">
                <% @approach_quality.value.times do %>
                    <%= image_tag "rating-on.png" %>
                <% end %>
                <% (3-@approach_quality.value).times do %>
                    <%= image_tag "rating-off.png" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid" style="margin-top: 10px;">
          <div>
            <div class="row-fluid"><h4>View Quality</h4></div>
            <div class="row-fluid">
              <div class="span6">
                <%= @view_quality.name %>
              </div>
              <div class="span6">
                <% @view_quality.value.times do %>
                    <%= image_tag "rating-on.png" %>
                <% end %>
                <% (3-@view_quality.value).times do %>
                    <%= image_tag "rating-off.png" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="span2 pull-right">
        <div class="row-fluid">
          <div>
            <div class="row-fluid"><h4>Building Quality</h4></div>
            <div class="row-fluid">
              <div class="span6">
                <%= @building_quality.name %>
              </div>
              <div class="span6">
                <% @building_quality.value.times do %>
                    <%= image_tag "rating-on.png" %>
                <% end %>
                <% (3-@building_quality.value).times do %>
                    <%= image_tag "rating-off.png" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid" style="margin-top: 10px;">
          <div>
            <div class="row-fluid"><h4>Interiors Quality</h4></div>
            <div class="row-fluid">
              <div class="span6">
                <%= @interiors_quality.name %>
              </div>
              <div class="span6">
                <% @interiors_quality.value.times do %>
                    <%= image_tag "rating-on.png" %>
                <% end %>
                <% (3-@interiors_quality.value).times do %>
                    <%= image_tag "rating-off.png" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="span2 pull-right">
        <div class="row-fluid blocky" style="margin-top: -6px;margin-left: -7px;">
          <div>
            <div class="row-fluid"><h4>Overall Quality</h4></div>
            <div class="row-fluid">
              <div class="span6">
                <%= @overall_quality_name %>
              </div>
              <div class="span6">
                <% @overall_quality_value.times do %>
                    <%= image_tag "rating-on.png" %>
                <% end %>
                <% (3-@overall_quality_value).times do %>
                    <%= image_tag "rating-off.png" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="row-fluid" style="margin-top: 5px;">
          <div>
            <div class="row-fluid"><h4>Locality Quality</h4></div>
            <div class="row-fluid">
              <div class="span6">
                <%= @locality_quality.name %>
              </div>
              <div class="span6">
                <% @locality_quality.value.times do %>
                    <%= image_tag "rating-on.png" %>
                <% end %>
                <% (3-@locality_quality.value).times do %>
                    <%= image_tag "rating-off.png" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>


    </div>
  </div>
</div>
<div class="content" style="margin-top: 10px;height:350px;">
  <div class="row-fluid span12" >
    <div class="span2 blocky" style="margin-left: -20px">
      <div class="slabel">Area</div>
      <%= @flat.area %>
      <br>
      <div class="slabel">Floor</div>
      <%= @flat.floor %>
