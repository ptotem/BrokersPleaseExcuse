                <%= select("facility", "facility_id", Facility.all.collect {|p| [ p.name, p.id ] }, {}, {:multiple => true, :'data-placeholder' => " ", :style => "width:550px;"} )  %>
            <%# end %>
            <%= s.submit "Go", :class => "btn btn-large", :style => "font-size:20px;width:60px; margin-left:565px;margin-top:-70px;" %>
            <br>
            <br>
            <br>
          </div>
        </div>
    <% end %>
  </div>
</div>


<%#= render '/res_data' %>
<div id="final_res" style="height: 500px; width: 500px;">

</div>

<div class="result_box" style="margin: -500px 0 0 700px; width: auto; position: absolute;">
  <% @sorted_score.each_with_index do |flat_score, index| %>
      <% flat=Flat.find(flat_score[0]) %>
      <div id="result_<%= index+1 %>" style="background: white;margin-bottom: 5px;border: 2px solid black;border-radius:10px;width:500px;padding: 20px;">
        <div id="<%= flat.id %>"></div>
        <div class="row-fluid" id="res_set_<%= index+1 %>_<%= flat.id %>" onclick="re($(this));">
          <div class="span8">
            <%= flat.name %>,
            <br>
            <%= flat.building.name %>,
            <br>
            <%= flat.building.main_locality.name %>,
            <br>
            <%= flat.building.main_locality.area.name %>
            <br>
          </div>
          <div class="span4">
            <h1>Score: <%= @flat_score[flat.id] %>%</h1>
            <br>
          </div>
        </div>
      </div>
  <% end %>
</div>




